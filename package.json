{
  "name": "clinical-rotation-platform",
  "version": "1.0.0",
  "description": "Clinical Rotation Platform - University of Nigeria Teaching Hospital, Ituku-Ozalla",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspace=packages/backend && npm run build --workspace=packages/frontend",
    "vercel-build": "npm run build",
    "build:api": "npm run build --workspace=packages/backend",
    "start": "npm run start --workspace=packages/backend",
    "db:migrate": "npm run migrate --workspace=packages/backend",
    "db:seed": "npm run seed --workspace=packages/backend",
    "deploy": "powershell -ExecutionPolicy Bypass -File scripts/deploy-all.ps1",
    "deploy:vercel": "powershell -ExecutionPolicy Bypass -File scripts/deploy-vercel.ps1",
    "setup:env": "powershell -ExecutionPolicy Bypass -File scripts/setup-env.ps1",
    "setup:db": "powershell -ExecutionPolicy Bypass -File scripts/setup-database.ps1",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pdfkit": "^0.13.3",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "@vercel/node": "^3.0.0",
    "concurrently": "^8.2.2",
    "pg": "^8.16.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unth/clinical-rotation-platform.git"
  },
  "author": "UNTH IT Department",
  "license": "UNLICENSED"
}
