# =============================================================================
# CLINICAL ROTATION PLATFORM - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# =============================================================================
# For Supabase, use the connection string from your project settings
# Go to: Project Settings > Database > Connection string > URI
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Or use individual settings:
DB_HOST=db.[YOUR-PROJECT-REF].supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=[YOUR-PASSWORD]
DB_SSL=true

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate secure secrets: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# ENCRYPTION
# =============================================================================
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=your-32-character-encryption-key!

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# For production, set to your Vercel deployment URL
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# =============================================================================
# QR CODE & GPS SETTINGS
# =============================================================================
QR_CODE_VALIDITY_MINUTES=15
GPS_RADIUS_METERS=500

# =============================================================================
# TEST ENGINE SETTINGS
# =============================================================================
TEST_DURATION_MINUTES=10
TEST_QUESTIONS_COUNT=50
MAX_TAB_SWITCHES=3
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# =============================================================================
# CLEARANCE SETTINGS
# =============================================================================
CLEARANCE_THRESHOLD_PERCENTAGE=75

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# =============================================================================
# OPTIONAL: EMAIL/SMTP (for password reset, notifications)
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password

# =============================================================================
# OPTIONAL: WHATSAPP API (for notifications)
# =============================================================================
# WHATSAPP_API_URL=https://api.whatsapp.com
# WHATSAPP_API_KEY=your-api-key
