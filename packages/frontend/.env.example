# Clinical Rotation Platform - Frontend Environment Variables
# Copy this file to .env and update the values

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# App Configuration
VITE_APP_NAME="Clinical Rotation Platform"
VITE_APP_VERSION=1.0.0

# Institution Details
VITE_INSTITUTION_NAME="University of Nigeria Teaching Hospital"
VITE_INSTITUTION_SHORT="UNTH"
VITE_INSTITUTION_LOCATION="Ituku-Ozalla, Enugu"

# Feature Flags
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_BIOMETRICS=false
VITE_ENABLE_WHATSAPP_DELIVERY=true

# Test Engine Configuration
VITE_TEST_DURATION_MINUTES=10
VITE_QUESTIONS_PER_TEST=50
VITE_MAX_TAB_SWITCHES=3
VITE_ENABLE_FULLSCREEN=true
VITE_ENABLE_DEVICE_FINGERPRINT=true

# Attendance Configuration
VITE_QR_CODE_EXPIRY_MINUTES=5
VITE_LOCATION_RADIUS_METERS=100

# Analytics
VITE_ENABLE_ANALYTICS=true

# Debug Mode (disable in production)
VITE_DEBUG=false
