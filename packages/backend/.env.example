# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/clinical_rotation
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clinical_rotation
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# WhatsApp API (for PDF delivery)
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_API_KEY=your-whatsapp-api-key

# Email Configuration (backup delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@unth.edu.ng
SMTP_PASS=your-smtp-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# QR Code Configuration
QR_CODE_VALIDITY_MINUTES=15
GPS_RADIUS_METERS=500

# Test Engine Configuration
TEST_DURATION_MINUTES=10
TEST_QUESTIONS_COUNT=50
MAX_TAB_SWITCHES=3
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# Clearance Threshold
CLEARANCE_THRESHOLD_PERCENTAGE=75

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
